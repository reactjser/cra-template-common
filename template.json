{
  "scripts": {
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,scss}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "prettier": "^1.19.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0"
  }
}